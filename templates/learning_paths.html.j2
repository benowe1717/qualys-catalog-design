{% for learning_path in learning_paths %}
<div class="mb-4 sm:mb-8">
    <p class="text-4xl font-bold mb-4">{{ learning_path.title }}</p>
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-2">
        {% for path in learning_path.paths %}
        <div class="p-2 xl:p-4 rounded-md opacity-85 bg-slateblue-100">
            <p class="text-2xl font-semibold mb-2 text-center md:text-left">{{ path.name }}</p>
            {% for course in path.courses %}
            <div class="mb-2 flex flex-col md:flex-row md:justify-start text-center md:text-left border border-gray rounded-md shadow-sm shadow-gray md:border-none md:rounded-none md:shadow-none">
                <div class="md:w-[20%]">
                    <div class="md:inline-flex">
                        <p class="text-black mr-1 max-md:hidden">{{ loop.index }}.&nbsp;<span class="font-medium capitalize text-{{ course.course_type }}">{{ course.course_type }}</span></p>
                    </div>
                </div>
                <div class="md:w-[80%]">
                    <div class="text-center md:text-left md:inline-flex md:justify-between md:w-full">
                        <p class="capitalize text-black md:w-[60%]">{{ course.course_name }}</p>
                        <span class="md:w-[30%]">
                        {% for name, url in course.course_links.items() %}
                            <a class="text-blue no-underline hover:underline hover:text-blue-700 capitalize" href="{{ url }}">{{ name }}</a> {% if not loop.last %} | {% endif %}
                        {% endfor %}
                        </span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</div>
{% endfor %}